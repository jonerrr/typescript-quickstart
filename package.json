{
  "name": "typescript-quickstart",
  "version": "0.0.0",
  "description": "",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "test": "jest src/",
    "dev": "nodemon --watch src src/index.ts",
    "build": "swc src/index.ts --config-file .swcrc --source-maps false -d build/ & tsc --pretty --skipLibCheck --noEmit"
  },
  "keywords": [],
  "author": "Jonah",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.23",
    "@swc/helpers": "^0.5.1",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.4",
    "@types/node": "^20.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "regenerator-runtime": "^0.13.11",
    "rome": "^11.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/**/*.test.{ts,tsx,js,jsx}",
      "<rootDir>/*.test.{ts,tsx,js,jsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testEnvironment": "node"
  }
}
